# Thanks Pat Brisbin for
# https://pbrisbin.com/posts/mutt_gmail_offlineimap/

set mbox_type   = Maildir

set folder      = ~/Mail
unset record

set realname    = "Leo Arias
set mail_check  = 0

# sort/threading
set sort        = threads
set sort_aux    = reverse-last-date-received
set sort_re

set spoolfile   = "+personal/INBOX"

source ~/.mutt/accounts/personal

folder-hook personal/* source ~/.mutt/accounts/personal
folder-hook canonical/* source ~/.mutt/accounts/canonical
