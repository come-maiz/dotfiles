# Thanks Pat Brisbin for
# https://pbrisbin.com/posts/mutt_gmail_offlineimap/
# https://pbrisbin.com/posts/two_accounts_in_mutt/

defaults
port 587
protocol smtp
auth on
tls on
tls_nocertcheck

account default : personal

account personal
from yo@elopio.net
user yo@elopio.net
password $personal_email_password

account canonical
host smtp.gmail.com
from leo.arias@canonical.com
user leo.arias@canonical.com
password $canonical_google_password
