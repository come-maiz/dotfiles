[general]
ui = ttyui
accounts = canonical

[Account canonical]
localrepository = canonical-local
remoterepository = canonical-remote

[Repository canonical-local]
type = Maildir
localfolders = ~/Mail/canonical

[Repository canonical-remote]
type = Gmail
remoteuser = leo.arias@canonical.com
# TODO: use gpg, keepass or vault to handle the password --elopio - 2016-10-03
remotepass = $canonical_gmail_password
realdelete = no
maxconnections = 3
sslcacertfile = /etc/ssl/certs/ca-certificates.crt
